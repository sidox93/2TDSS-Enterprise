@model Carro

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<form asp-action="editar" asp-controller="carro">
    <input asp-for="Codigo" />
    <div class="form-group">
        <label asp-for="Modelo"></label>
        <input asp-for="Modelo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Ano"></label>
        <input asp-for="Ano" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DataEntrada"></label>
        <input asp-for="DataEntrada" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="Novo" />
        <label asp-for="Novo"></label>
    </div>
    <div class="form-group">
        <label asp-for="Combustivel"></label>
        <select asp-for="Combustivel" 
                asp-items="@Html.GetEnumSelectList<Combustivel>()" class="form-control">
            <option>Selecione</option>
        </select>
    </div>
    <input type="submit" value="Editar" class="btn btn-outline-success" />
    <a asp-action="index" class="btn btn-outline-dark">Cancelar</a>
</form>
